            document.getElementById('showImg').src = "{{ asset('uploads/') }}"+imgSrc;
        }

        function myFunction() {
            var x = document.getElementsByClassName("div-only-mobile");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }
